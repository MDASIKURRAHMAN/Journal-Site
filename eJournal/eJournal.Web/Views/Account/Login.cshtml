@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Authentication/LoginPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>
<body>
    <div class="main">
        <div class="container mt-5">
            <div class="card mx-auto" style="max-width: 600px;">
                <div class="card-body text-center">
                    <img src='~/Images/blogEntryImage.png' id="blog-entry-logo" class="mb-3" />
                    <div id="welcome-message" class="md-2 mb-3 ">
                        Welcome to My eJournal
                    </div>
                    <div class="md-2 mb-3 " id="username">
                    </div>
                    <div>
                        <img src="~/Images/user.png" height="100px" width="100px" id="userImage" alt="User profile image" class="img-fluid mb-3 rounded-circle" />
                    </div>
                    <div id="userEmail" class="md-2  mb-3 ">
                    </div>

                    <form asp-controller="account" asp-action="Index">
                        <button type="submit" class="btn btn-primary">
                            <i class="fab fa-google"></i> Login with Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js" asp-append-version="true"></script>

</body>
</html>